{% extends "./base.html.twig" %}
{% block title %}{{ parent() }}{% endblock %}
{% block stylesheets %}
    <style>
        .table { border-collapse: collapse; }
        .table th, td {
            border-bottom: 1px solid #ddd;
            width: 250px;
            text-align: left;
            align: left;
        }
    </style>
{% endblock %}
{% block body %}
    <h2>Books database application!</h2>
    <table class = "table">
        <tr>
            <th>Name</th>
            <th>Author</th>
            <th>Price</th>
            <th>Action</th>
            <th></th>
        </tr>
        {% for book in books %}
            <tr>
                <td>{{ book.name }}</td>
                <td>{{ book.author }}</td>
                <td>{{ book.price }}</td>
                <td><a href = "{{ path('update_book', { 'id' : book.id }) }}">Edit</a></td>
                <td><a href = "{{ path('delete_book', { 'id' : book.id }) }}">Delete</a></td>
            </tr>
        {% endfor %}
    </table>
    <br>
    <div>
    <a href = "{{ path('new_book') }}">Add a new book</a>
    </div>
    <br/><br/><br/>

    <div>
        <a href = "{{ path('logout') }}">Log Out</a>
    </div>
{% endblock %}